<h2>Index</h2>



@using (Html.BeginForm())
{
    <div class="form-group form-group-sm">
        <div class="col-md-2">
            ศูนย์จัดจำหน่าย :
        </div>
        <div class="col-md-4">
            @Html.DropDownList("BranchID", ViewBag.BranchID as SelectList, "Please select", htmlAttributes: new {@class = "form-control" })<br>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="col-md-2">
            จังหวัด :
